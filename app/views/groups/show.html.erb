<% content_for :title, "Group Details" %>

<h1 style="text-align: center;">Group: <%= @group.name %></h1>

<p style="text-align: center;"><strong>Description:</strong> <%= @group.description %></p>

<hr>

<h2 style="text-align: center;">Contacts in this Group</h2>

<% if @group.contacts.any? %>
  <table style="width: 90%; margin: auto; border-collapse: collapse; margin-bottom: 1rem; text-align: center;" border="1">
    <thead style="background-color: #f0f0f0;">
      <tr>
        <th style="padding: 10px;">Name</th>
        <th style="padding: 10px;">Phone</th>
        <th style="padding: 10px;">Email</th>
      </tr>
    </thead>
    <tbody>
      <% @group.contacts.each do |contact| %>
        <tr>
          <td style="padding: 10px;"><%= contact.name %></td>
          <td style="padding: 10px;"><%= contact.phone %></td>
          <td style="padding: 10px;"><%= contact.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p style="color: gray; text-align: center;">No contacts found in this group.</p>
<% end %>

<hr>

<div style="text-align: center; margin-top: 20px;">
  <%= link_to "Edit Group", edit_group_path(@group), class: "btn", style: "background-color: #198754;" %>
  <%= button_to "Delete Group", group_path(@group), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger", form_class: "inline-form" %>
  <%= link_to "Back to Groups", groups_path, class: "btn", style: "background-color: #0d6efd;" %>
</div>

<style>
  .btn {
    display: inline-block;
    padding: 8px 14px;
    margin: 4px;
    text-decoration: none;
    color: white;
    border-radius: 4px;
  }

  .btn:hover {
    opacity: 0.9;
  }

  .btn-danger {
    background-color: #dc3545;
  }

  .btn-danger:hover {
    background-color: #a71d2a;
  }

  .inline-form {
    display: inline;
  }
</style>
